<Window x:Class="Wpf_Karelia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Karelia"
        mc:Ignorable="d"
        Title="Minesweeper" SizeToContent="WidthAndHeight">
    <Grid Name="root" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <TextBlock x:Name="timerText" Text="00:00:00" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="RESTART" Background = "LightGreen" HorizontalAlignment="Center"   VerticalContentAlignment="Center"   FontSize="22" VerticalAlignment="Center" Click="BtnRestart_Click"/>
        <TextBlock x:Name="scoreText" Text="00" FontSize="24"  HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</Window>
