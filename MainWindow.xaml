<Window x:Class="Wpf_Karelia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Karelia"
        mc:Ignorable="d"
        Title="Minesweeper"  SizeChanged="Window_SizeChanged" SizeToContent="WidthAndHeight">
    <Grid Name="root" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="timerText" Text="00:00" Height="40" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,13,0,0"   FontFamily="Arial Black">
        </TextBlock>
        <Button Content="Restart"  Height="40" HorizontalAlignment="Center"  VerticalContentAlignment="Center"  FontSize="24" Click="BtnRestart_Click" FontFamily="Arial Black" Background="LightGray" Foreground="Green"  BorderThickness="5" BorderBrush="Gray" Width="129">
        </Button>
        <TextBlock x:Name="scoreText" Text="00" Height="40" FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3,13,0,0"  FontFamily="Arial Black">
        </TextBlock>
    </Grid>
</Window>
