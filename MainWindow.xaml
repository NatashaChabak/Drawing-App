<Window x:Class="Wpf_Karelia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Karelia"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid Name="root" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
		
			<TextBlock x:Name="timerText" Text="00:00:00" FontSize="24" Margin="75,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
			<Button Content="Restart Game" HorizontalAlignment="Center" FontSize="20" Margin="75,3,0,0" VerticalAlignment="Top" Click="BtnRestart_Click"/>
			<TextBlock x:Name="scoreText" Text="00" FontSize="24" Margin="75,3,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
		</StackPanel>
    </Grid>
</Window>
